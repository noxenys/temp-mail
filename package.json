{
  "name": "temp-email",
  "version": "1.0.0",
  "description": "基于 Cloudflare Workers 的临时邮箱服务",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run build && npm run d1:setup && wrangler deploy",
    "build": "node build.js",
    "d1:setup": "wrangler d1 create temp_email_db --remote || true && npm run d1:execute-basic:remote",
    "d1:execute:local": "wrangler d1 execute TEMP_MAIL_DB --local --file=d1-init.sql",
    "d1:execute:remote": "wrangler d1 execute TEMP_MAIL_DB --remote --file=d1-init.sql",
    "d1:execute-basic:local": "wrangler d1 execute TEMP_MAIL_DB --local --file=d1-init-basic.sql",
    "d1:execute-basic:remote": "wrangler d1 execute TEMP_MAIL_DB --remote --file=d1-init-basic.sql",
    "d1:query:local": "wrangler d1 execute TEMP_MAIL_DB --local",
    "d1:query:remote": "wrangler d1 execute TEMP_MAIL_DB --remote",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint src/**/*.js --fix",
    "type-check": "tsc --noEmit",
    "ci:test": "npm run lint && npm run type-check && npm run test:coverage"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241111.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "typescript": "^5.5.4",
    "uri-js": "^4.4.1",
    "vitest": "^2.0.0",
    "wrangler": "^4.45.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noxenys/temp-email"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "email",
    "temporary-email"
  ],
  "author": "noxenys",
  "license": "Apache-2.0"
}